{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"api#build": {
			"dependsOn": [],
			"outputs": ["dist/**"]
		},
		"dev": {
			"dependsOn": ["api#build"],
			"cache": false,
			"persistent": true
		}
	}
}
